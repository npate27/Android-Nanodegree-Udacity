<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin"
    android:background="@color/blackAlpha"
    android:orientation="vertical">

    <TextView
        android:id="@+id/widget_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/widget_item_name_tv_margin"
        android:textColor="@android:color/white"
        android:text="@string/widget_expiring_soon"
        android:textSize="@dimen/widget_item_name_tv_text_size"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/widget_items_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/black"
        android:dividerHeight="@dimen/widget_items_lv_divider_height"
        android:orientation="vertical"/>

</LinearLayout>