<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/ingredient_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/ingredient_name_tv_margin_end"
        android:layout_marginStart="@dimen/ingredient_name_tv_margin_start"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/quantity_tv"
        tools:text="Apples"
        android:layout_marginRight="@dimen/ingredient_name_tv_margin_end"
        android:layout_marginLeft="@dimen/ingredient_name_tv_margin_start"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/quantity_tv" />

    <TextView
        android:id="@+id/quantity_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/quantity_tv_margin_end"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        tools:text="30 G"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/quantity_tv_margin_end" />

</RelativeLayout>